.cover-container
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  height: 100vh
  margin-top: -44px
  @extend .wrapper
  .wrapper
    min-width: 80vw

  .name
    color: $global-color.light-grey
    font-size: 16px

  h1

    span
      @extend .text-gradient
  p
    width: 35%
    max-width: 400px
    padding-top: $global-space.f
    padding-bottom: $global-space.b
    font-size: 12px

  .icon-item
    @extend .flex-center-both
    width: 40px
    height: 40px
    border-radius: 50%
    overflow: hidden
    background: $gradient

@media (max-width: $global-width.break-point-c)
  .cover-container
    p
      width: 100%
      padding-top: $global-space.b
    .icon-item
      position absolute
      left: 50%
      bottom: 64px
      margin-left: -20px
      animation: start 1.5s infinite ease-in-out
