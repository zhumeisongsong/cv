$gradient = linear-gradient(to bottom right, $global-color.primary, $global-color.sub-primary)
.cover-container
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  @extends .wrapper
  height: 100vh
  padding: 0 $global-space.b

  .name
    color: $global-color.light-grey

  p
    width 35%

  .icon-item
    @extends .flex-center-both
    width: 40px
    height: 40px
    border-radius: 50%
    overflow: hidden
    background: $gradient