.ant-modal.detail
  top: $global-space.a
  max-width: $global-width.break-point-a
  width: 100% !important
  padding: 0 $global-space.a
  .ant-modal-body
    height: 84vh
    overflow-y: auto
    -webkit-overflow-scrolling: touch
  button:last-child
    display: none

.detail-content
  display: flex
  flex-wrap: wrap
  position: relative
  header
    width: 100%
    padding-bottom: $global-space.e

  .col-left
    width: 62.5%
  .item
    display: flex
    padding-bottom: $global-space.a
    &.link
      margin-top: -($global-space.a)
  .item-label
    padding-right: $global-space.a
    font-weight: bold
    &::after
      content: ':'
  a
    font-weight: bold

  ul
    padding-left: $global-space.d
    li
      list-style: disc
    .ul-name
      padding-right: $global-space.a

  .detail-images
    max-width: 900px
    width: 36.5%
    margin: 0 auto
    img
      width: 100%
      + img
        margin-top: $global-space.b

.padding-r
  padding-right: $global-space.a

.padding-lr
  padding-left: $global-space.a
  padding-right: $global-space.a


@media (max-width: $global-width.break-point-c)
  .detail-content
    .col-left
      width: 100%
      padding-bottom: $global-space.c
